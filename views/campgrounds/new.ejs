<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">New Campground</h1>
	<div class="col-6 offset-3">
		<form action="/campgrounds" method="POST" class="needs-validation" novalidate>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="campground[title]"
					required
				/>
				<div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Something is wrong.
        </div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					id="location"
					class="form-control"
					type="text"
					name="campground[location]"
					required
				/>
				<div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Something is wrong.
        </div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Image Url</label>
				<input
					type="text"
					class="form-control"
					id="image"
					name="campround[image]"
					required
				/>
				<div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Something is wrong.
        </div>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">$</span>
				<input
					id="price"
					class="form-control"
					type="number"
					step="0.01"
					aria-label="price"
					name="campground[price]"
					required
				/>
				<div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Something is wrong.
        </div>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea
					class="form-control"
					name="campground[description]"
					id="description"
					cols="30"
					rows="5"
					required
				></textarea>
				<div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Something is wrong.
        </div>
			</div>

			<div class="mb-3">
				<button type="submit" class="btn btn-success">Add campground</button>
			</div>
		</form>

		<a href="/ca mpgrounds">Cancel</a>
	</div>
</div>
