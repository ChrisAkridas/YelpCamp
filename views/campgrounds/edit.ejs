<% layout('layouts/boilerplate') %> 
  <form action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST">
    <div>
      <label for="title">Title: </label>
      <input type="text" id="title" name="campground[title]" value="<%= campground.title %>" placeholder="<%= campground.title %> ">
    </div>
    <div>
      <label for="location">Location: </label>
      <input type="text" id="location" name="campground[location]" value="<%= campground.location %>" placeholder="<%= campground.location %>">
    </div>
    <button>Submit</button>
  </form>

  <a href="/campgrounds">Cancel</a>